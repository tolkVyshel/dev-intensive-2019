<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.profile.ProfileActivity"
        android:orientation="vertical"
>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:aspectRatio="1.78"
                android:src="@drawable/profile_bg"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageButton android:layout_width="@dimen/btn_round_size_40"
                         android:src="@drawable/ic_switch_day_night"
                         android:background="@drawable/btn_round_bg"
                         android:layout_height="@dimen/btn_round_size_40"/>
            <ImageView android:layout_width="@dimen/avatar_round_size"
                       android:id="@+id/iv_avatar"
                       android:src="@drawable/avatar_default"
                       android:layout_height="@dimen/avatar_round_size" android:layout_alignParentStart="true"
                       android:layout_alignParentTop="true"/>
            <ImageButton android:layout_width="@dimen/btn_round_size_40"
                         android:background="@drawable/btn_round_bg"
                         android:src="@drawable/ic_edit_black_24dp"
                         android:layout_height="@dimen/btn_round_size_40"/>
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>